#include <stdio.h>
#include <stdlib.h>

void

int main(void) {

	int money = 0;
	int error = 0;

	do {
		printf("Amount Desired => ");
		fflush(stdout);

		scanf("%d", &money);

		if (money % 10 != 0) {
			error = 1;
		} else {
			error = 0;
		}

	} while (error);

	return 0;
}
