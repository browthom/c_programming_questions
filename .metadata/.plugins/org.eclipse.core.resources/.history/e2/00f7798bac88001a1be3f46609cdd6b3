#include <stdio.h>
#include <stdlib.h>

void determine_change(float amount,
					  int *dollars,
					  int *quarters,
					  int *dimes,
					  int *nickels,
					  int *pennies) {

}

int main(void) {
	float amount_due = 0.0, amount_paid = 0.0;

	int dollars = 0, quarters = 0, dimes = 0, nickels = 0, pennies = 0;

	do {
		printf("Enter Amount Due => ");
		fflush(stdout);
		scanf("%f", &amount_due);
		printf("Enter Amount Paid => ");
		fflush(stdout);
		scanf("%f", &amount_paid);

	} while (0);

	float change = amount_due - amount_paid;

	determine_change(float amount,
				     &dollars,
					 &quarters,
					 &dimes,
					 &nickels,
					 &pennies);

	return 0;
}
